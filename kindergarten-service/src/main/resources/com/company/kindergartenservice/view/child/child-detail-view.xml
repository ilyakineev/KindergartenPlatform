<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://childDetailView.title"
      focusComponent="form">
    <data>
        <instance id="childDc"
                  class="com.company.kindergartenservice.entity.Child">
            <fetchPlan extends="_base">
                <property name="parents" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="childDl"/>
            <loader id="parentsDl"/>
            <collection id="parentsDc" property="parents"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="childDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="firstNameField" property="firstName"/>
            <textField id="lastNameField" property="lastName"/>
            <textField id="middleNameField" property="middleName"/>
            <textField id="birthDateField" property="birthDate"/>
            <fileStorageUploadField id="photoField" clearButtonVisible="true" fileNameVisible="true" property="photo"/>
        </formLayout>
        <hbox id="parentsButton">
            <button action="parentsDataGrid.add"/>
            <button action="parentsDataGrid.refresh"/>
            <button action="parentsDataGrid.exclude"/>
        </hbox>
        <dataGrid id="parentsDataGrid" dataContainer="parentsDc">
            <actions>
                <action id="add" type="list_add"/>
                <action id="exclude" type="list_exclude"/>
                <action id="refresh" type="list_refresh"/>
            </actions>
            <columns>
                <column property="firstName"/>
                <column property="lastName"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
