<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://educatorListView.title"
      focusComponent="educatorsDataGrid">
    <data>
        <collection id="educatorsDc"
                    class="com.company.kindergartenservice.entity.Educator">
            <fetchPlan extends="_instance_name">
                <property name="position"/>
                <property name="staff" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="educatorsDl" readOnly="true"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="educatorsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="educatorsDataGrid.createAction"/>
            <button id="editButton" action="educatorsDataGrid.editAction"/>
            <button id="removeButton" action="educatorsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="educatorsDl"/>
        </hbox>
        <dataGrid id="educatorsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="educatorsDc"
                  columnReorderingAllowed="true"
                  selectionMode="MULTI">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="position"/>
                <column property="staff"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
