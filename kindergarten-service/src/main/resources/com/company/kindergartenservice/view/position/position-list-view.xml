<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://positionListView.title"
      focusComponent="positionsDataGrid">
    <data>
        <collection id="positionsDc"
                    class="com.company.kindergartenservice.entity.staff.Position">
            <loader id="positionsDl" readOnly="true"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="refreshButton" action="positionsDataGrid.refreshAction"/>
            <simplePagination id="pagination" dataLoader="positionsDl"/>
        </hbox>
        <dataGrid id="positionsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="positionsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="refreshAction" type="list_refresh"/>
            </actions>
            <columns resizable="true">
                <column property="id"/>
                <column property="name"/>
                <column property="description"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
