<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://childListView.title"
      focusComponent="childrenDataGrid">
    <data>
        <collection id="childrenDc"
                    class="com.company.kindergartenservice.entity.Child">
            <fetchPlan extends="_base"/>
            <loader id="childrenDl" readOnly="true"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="childrenDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="childrenDataGrid.createAction"/>
            <button id="editButton" action="childrenDataGrid.editAction"/>
            <button id="removeButton" action="childrenDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="childrenDl"/>
        </hbox>
        <dataGrid id="childrenDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="childrenDc"
                  columnReorderingAllowed="true"
                  selectionMode="MULTI">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="firstName"/>
                <column property="lastName"/>
                <column property="middleName"/>
                <column property="birthDate"/>
                <column property="photo"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
