<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://staffListView.title"
      focusComponent="staffsDataGrid">
    <data>
        <collection id="staffsDc"
                    class="com.company.kindergartenservice.entity.staff.Staff">
            <loader id="staffsDl" readOnly="true"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="refreshButton" action="staffsDataGrid.refreshAction"/>
            <simplePagination id="pagination" dataLoader="staffsDl"/>
        </hbox>
        <dataGrid id="staffsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="staffsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="refreshAction" type="list_refresh"/>
            </actions>
            <columns resizable="true">
                <column property="id"/>
                <column property="firstName"/>
                <column property="middleName"/>
                <column property="lastName"/>
                <column property="email"/>
                <column property="phone"/>
                <column property="userId"/>
                <column property="birthDate"/>
                <column property="employmentDate"/>
                <column property="photoUrl"/>
                <column property="employeeStatus"/>
                <column property="departments"/>
                <column property="positions"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
