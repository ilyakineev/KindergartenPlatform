<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="kind">
        <createTable tableName="KIND_CHILD">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_KIND_CHILD"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="${offsetDateTime.type}"/>
            <column name="GROUP_ID" type="UUID"/>
            <column name="FIRST_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="MIDDLE_NAME" type="VARCHAR(255)"/>
            <column name="BIRTH_DATE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="PHOTO" type="VARCHAR(1024)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="kind">
        <createTable tableName="KIND_CHILD_PARENT_LINK">
            <column name="CHILD_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_KIND_CHILD_PARENT_LINK"/>
            </column>
            <column name="PARENT_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_KIND_CHILD_PARENT_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="kind">
        <createTable tableName="KIND_GROUP">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_KIND_GROUP"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="${offsetDateTime.type}"/>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="kind">
        <createTable tableName="KIND_PARENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_KIND_PARENT"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="${offsetDateTime.type}"/>
            <column name="FIRST_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="MIDDLE_NAME" type="VARCHAR(255)"/>
            <column name="PHONE" type="VARCHAR(255)"/>
            <column name="EMAIL" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="kind">
        <createIndex indexName="IDX_KIND_CHILD_GROUP" tableName="KIND_CHILD">
            <column name="GROUP_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="GROUP_ID" baseTableName="KIND_CHILD"
                                 constraintName="FK_KIND_CHILD_ON_GROUP" referencedColumnNames="ID"
                                 referencedTableName="KIND_GROUP"/>
    </changeSet>
    <changeSet id="6" author="kind">
        <addForeignKeyConstraint baseColumnNames="CHILD_ID" baseTableName="KIND_CHILD_PARENT_LINK"
                                 constraintName="FK_KINCHIPAR_ON_CHILD" referencedColumnNames="ID"
                                 referencedTableName="KIND_CHILD"/>
    </changeSet>
    <changeSet id="7" author="kind">
        <addForeignKeyConstraint baseColumnNames="PARENT_ID" baseTableName="KIND_CHILD_PARENT_LINK"
                                 constraintName="FK_KINCHIPAR_ON_PARENT" referencedColumnNames="ID"
                                 referencedTableName="KIND_PARENT"/>
    </changeSet>
</databaseChangeLog>