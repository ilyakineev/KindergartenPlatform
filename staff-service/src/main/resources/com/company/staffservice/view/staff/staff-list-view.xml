<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://staffListView.title"
      focusComponent="staffsDataGrid">
    <data>
        <collection id="staffsDc"
                    class="com.company.staffservice.entity.Staff">
            <fetchPlan extends="_base">
                <property name="positions" fetchPlan="_base"/>
                <property name="departments" fetchPlan="_base"/>
                <property name="employeeStatus" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="staffsDl" readOnly="true"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="staffsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="staffsDataGrid.createAction"/>
            <button id="editButton" action="staffsDataGrid.editAction"/>
            <button id="removeButton" action="staffsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="staffsDl"/>
        </hbox>
        <dataGrid id="staffsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="staffsDc"
                  columnReorderingAllowed="true"
                  selectionMode="MULTI">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="firstName"/>
                <column property="middleName"/>
                <column property="lastName"/>
                <column property="email"/>
                <column property="phone"/>
                <column property="birthDate"/>
                <column property="employmentDate"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
